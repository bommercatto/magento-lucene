
<?php if($this->getResultCount()): ?>
<h3>
	<?php echo $this->__("Search results for '%s':", $this->getEscapedQueryText()) ?>
	<?php if($this->getResultCount()>1): ?>
	<?php echo $this->__("%d hits.", $this->getResultCount()); ?>
	<?php else: ?>
	<?php echo $this->__("1 hit."); ?>
	<?php endif; ?>
</h3>
<?php foreach($this->getResults() as $result): ?>
<div class="search-result">
	<?php  if($result->getSmallImage()): ?>
	<div class="result-image">
                <img
                        src="<?php echo Mage::helper('catalog/image')->init($result, 'small_image')->resize(135); ?>"
                        width="135" height="135"
                        alt="<?php echo $this->stripTags($this->getImageLabel($result, 'small_image'), null, true) ?>" />


        </div>
	<?php  endif; ?>
	<h4>
		 <a href="<?php echo Mage::getUrl($result->getUrlPath()); ?>"> <?php echo $result->getName(); ?>
		</a>
	</h4>
	<p>
		<?php echo str_replace(
				$this->getEscapedQueryText(),
				'<strong>'.$this->getEscapedQueryText().'</strong>',
				substr($result->getShortContent(),0,300)
                ); ?>
		... <a href="<?php echo Mage::getUrl($result->getUrlPath()); ?>"> <?php echo $this->__('more');?>
		</a>
	</p>
	<a href="<?php echo $result->getUrl(); ?>"> <?php echo $result->getUrl();?>
	</a>
</div>
<?php endforeach; ?>
<?php else: ?>
<h3>
	<?php echo $this->__("There is no page machting your search for '%s'", $this->getEscapedQueryText()) ?>
	</h2>
	<?php endif; ?>